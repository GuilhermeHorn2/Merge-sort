#include <iostream>
#include <cmath>
#include <cstring>
#include <cstdlib>
//
//using std::string
//
using namespace std;

void merging(int a[],int l,int m,int r){
    int i = l;
    int j = m+1;
    int k = l;
    int* temp = new int[r+1];
    while(i <= m && j <= r){
        if(a[i] <= a[j]){
            temp[k] = a[i];
            i++,k++;
        }
        else{
            temp[k] = a[j];
            j++,k++;
        }
    }
    while(i <= m){
        temp[k] = a[i];
        i++,k++;
    }
    while(j <= r){
        temp[k] = a[j];
        j++,k++;
    }
    for(int t = l;t <= r;t++){
        a[t] = temp[t];
    }
    //delete []temp;
    //temp = NULL;
}

void mergeSort(int a[],int l,int r){
    //it wil stop when the array is unitary
    if(l < r){
        int m = (l+r)/2;
        mergeSort(a,l,m);
        mergeSort(a,m+1,r);
        merging(a,l,m,r);
    }
}








int main(){
    /*\n;||(or) e &&(and)*/
    int n = 5;
    int a[n] = {7,9,3,1,5};
    mergeSort(a,0,4);
    for(int i = 0;i < n;i++){
        printf("%d",a[i]);
    }






return 0;
 }
